/* pages/musicList/index/index.wxss */

.detail_header {
    position: relative;
}

.detail_body {
    margin: 20rpx;
    border-bottom: 1rpx solid #eee;
}

.btn-absolute {
    position: absolute;
    bottom: -16px;
    right: 10px;
}

.musicControll {
    margin: 25% auto;
}

.musicTitle {
    color: #353535;
    font-size: 1.32em;
    font-weight: 600;
    margin: 28rpx 0;
}

.ellipsis_line2 {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.desHide {
    height: 200rpx;
    overflow: hidden;
}

.arrows180 {
    transform: rotate(180deg);
    -webkit-transform: rotate(180deg);
    transition: all .3s;
}

.list_item {
    line-height: 100rpx;
    margin: 0 40rpx;
    position: relative;
    /*border-bottom: 1rpx solid #dfdfdf;*/
}

.wid20 {
    width: 20%
}

.listHover {
    background: #dedede;
    color: rgba(0, 0, 0, .6);
}

.detail_list {
    margin: 0 15px 80rpx;
    background: #fff
}